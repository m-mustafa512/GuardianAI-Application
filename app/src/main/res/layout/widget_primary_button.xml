<!--
    Primary Button Widget
    Reusable button component matching Login Module theme
    Usage: Include this layout in other layouts or use as a style reference
-->
<com.google.android.material.button.MaterialButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/guardianai_button_height"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:backgroundTint="@color/primary"
    app:cornerRadius="@dimen/guardianai_corner_radius_medium" />








