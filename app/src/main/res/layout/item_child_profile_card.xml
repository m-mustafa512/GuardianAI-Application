<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground">

        <!-- Top Section: Profile Picture, Name, Status, Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <!-- Child Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/tvChildName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/status_online_background" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDeviceInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="iPad Pro â€¢ Bedroom"
                    android:textSize="13sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Circular Progress Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:indeterminate="false"
                app:indicatorColor="#4A90E2"
                app:trackColor="#E0E0E0"
                app:trackThickness="6dp"
                app:indicatorSize="64dp" />
        </LinearLayout>

        <!-- Screen Time Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen Time"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvScreenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h 45m"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvScreenTimeLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 2h"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- App Icons (Placeholder) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#F44336"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#000000" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reports"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4A90E2"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconTint="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPolicies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Policies"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconTint="#666666" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
