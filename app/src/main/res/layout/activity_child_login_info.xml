<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- QR Code Icon -->
        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_shield"
            android:contentDescription="QR Code"
            android:tint="#4A90E2"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Login via QR Code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/ivQRCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Info Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Info"
                    android:tint="#4A90E2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To login as a child, you need to scan the QR code generated by your parent's device. This ensures secure and password-less pairing between parent and child devices."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Steps List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!-- Step 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_step_number"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ask your parent to generate a QR code from their GuardianAI app"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Step 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="2"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_step_number"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tap the button below to open your camera"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Step 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_step_number"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Point your camera at the QR code to scan"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Scan QR Code Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanQR"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Open Camera to Scan QR Code"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#4A90E2"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_shield"
            app:iconGravity="start"
            app:iconTint="@android:color/white"
            app:iconPadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardInfo"
            android:layout_marginTop="32dp" />

        <!-- Help Text -->
        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have a QR code? Ask your parent to generate one."
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnScanQR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

