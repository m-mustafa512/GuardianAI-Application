<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_blue"
    android:padding="24dp">

    <!-- Success Icon Container -->
    <FrameLayout
        android:id="@+id/layoutIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp">

        <!-- Large White Circle with Shield -->
        <ImageView
            android:id="@+id/ivShield"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_shield_success"
            android:contentDescription="Shield"
            android:background="@drawable/bg_circle_white" />

        <!-- Small Green Check Circle -->
        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="Check"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-8dp" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Successful"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/layoutIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Message Line 1 -->
    <TextView
        android:id="@+id/tvMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back to GuardianAI."
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Message Line 2 -->
    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your session is secure."
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvMessage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Encryption Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEncryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tvMessage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    android:contentDescription="Lock"
                    android:tint="#4A90E2"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="END-TO-END ENCRYPTED"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cardEncryption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Go to Dashboard Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToDashboard"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Go to Dashboard"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#4A90E2"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_arrow_right_white"
        app:iconGravity="end"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        android:layout_marginTop="32dp" />

    <!-- Redirecting Message -->
    <TextView
        android:id="@+id/tvRedirecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redirecting to dashboard automatically..."
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/btnGoToDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


