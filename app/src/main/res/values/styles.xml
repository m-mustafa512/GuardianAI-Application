<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Guardian AI Shared Theme Styles
        These styles match the Login Module theme and should be reused across all modules
    -->

    <!-- Primary Button Style (matches Login Module) -->
    <style name="GuardianAI_PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="GuardianAI_SecondaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Card Container Style (matches Login Module cards) -->
    <style name="GuardianAI_CardContainer">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Text Input Style (matches Login Module) -->
    <style name="GuardianAI_TextInputLayout">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">#999999</item>
    </style>

    <!-- Title Text Style -->
    <style name="GuardianAI_TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="GuardianAI_TextSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <!-- Body Text Style -->
    <style name="GuardianAI_TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Label Text Style (for form labels) -->
    <style name="GuardianAI_TextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Link Text Style -->
    <style name="GuardianAI_TextLink">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Status Badge Style -->
    <style name="GuardianAI_StatusBadge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Screen Background (matches Login Module) -->
    <style name="GuardianAI_ScreenBackground">
        <item name="android:background">#F5F5F5</item>
    </style>

    <!-- Spacing Constants (matching Login Module) -->
    <dimen name="guardianai_spacing_small">8dp</dimen>
    <dimen name="guardianai_spacing_medium">16dp</dimen>
    <dimen name="guardianai_spacing_large">24dp</dimen>
    <dimen name="guardianai_spacing_xlarge">32dp</dimen>

    <!-- Corner Radius Constants -->
    <dimen name="guardianai_corner_radius_small">8dp</dimen>
    <dimen name="guardianai_corner_radius_medium">12dp</dimen>
    <dimen name="guardianai_corner_radius_large">16dp</dimen>

    <!-- Button Height -->
    <dimen name="guardianai_button_height">56dp</dimen>

</resources>

